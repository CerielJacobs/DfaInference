#! /bin/sh

# generateSample <DFA> <count> <maxlength>
# Generates a sample from <DFA>, with <count> sentences, of maximum length
# <maxlength>.

# Check setting of DFA_HOME
if [ -z "$DFA_HOME" ];  then
    DFA_HOME=`pwd`
fi
export DFA_HOME

$DFA_HOME/bin/satin-run -Xmx256M abbadingo.GenerateSampleAndTest -m $1 -count $2 -maxl $3 -prefix $1 -testcount 1800
